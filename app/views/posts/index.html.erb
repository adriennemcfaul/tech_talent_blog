<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class="panel panel-default">
          <div class="panel-heading">
          <%= post.title %> - <%= post.author %>

          <!-- instead of post.author -->
<p>by <%= post.user.username %></p>
<!-- instead of post.author -->
<p>by <%= post.user.email %></p>

          </div>
          <div class="panel-body">
          <%= post.blog_entry %>
          </div>
          </div>
            
          </td>
        <td><div class="btn btn-primary"><%= link_to 'Show', post %></div></td>
        <td><div class="btn btn-info"><%= link_to 'Edit', edit_post_path(post) %></div></td>
        <td><div class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>
<br>

<%= link_to 'New Post', new_post_path %>
