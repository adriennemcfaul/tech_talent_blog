<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  #<%= @post.author %>

    <!-- instead of @post.author -->
    by <%= @post.user.email %>



</p>

<p>
    <!-- instead of @post.author -->
    by <%= @post.user.username %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry.html_safe %>
</p>

<div id="comments" class="jumbotron">
<%= render 'comments/form', comment: @comment %>
<% @post.comments.each do |comment| %>
<p>
  <strong><%= link_to comment.user.username, user_posts_path(id: comment.user_id) %> said...</strong>
</p>
	<%= comment.author %> said... <br/>
	<%= comment.comment_entry %>
</p>
<% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
